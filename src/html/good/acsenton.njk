{% include "components/common/breacrumbs.njk" %}

<div class="container">
    <div class="main-good-block">
        <div class="good-photos">

            <div class="splide_container">
            <div class="splide goods-gallery personal-gallery" role="group">
                <div class="splide__arrows">
                    <button class="splide__arrow splide__arrow--prev">
                        <i class="icon icon-arrow-200"></i>
                        <i class="icon icon-arrow-300"></i>
                    </button>
                    <button class="splide__arrow splide__arrow--next">
                        <i class="icon icon-arrow-200"></i>
                        <i class="icon icon-arrow-300"></i>
                    </button>
                </div>
                <div class="splide__track slides">
                    <ul class="splide__list">
                        {% for i in range(0, 6) %}
                            <li class="splide__slide">
                                <div class="photo-preview">
                                    <img src="/images/goods/small/3.jpg" />
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            </div>
            
            <div class="good-selected-photo">
                <img src="/images/goods/full/image1.jpg" />
            </div>
        </div>

        <div class="good-base">
            <div class="good-name">
                <div class="category">Страховочная система</div>
                <div class="name">CORAX</div>
                <div class="code">Артикул: C051BA00<span class="separator">|</span>Код товара: 376147</div>

            </div>
            <div class="good-price">
                <div class="price">6 390 руб.</div>
                <div class="avaible">Наличие в интернет-магазине</div>
            </div>
            <div class="good-options">
                <div class="colors">
                    <div class="small-label">Цвет:</div>
                    <div class="color-list">
                        <div class="color-preview selected">
                            <img src="/images/goods/small/3.jpg" />
                        </div>
                        <div class="color-preview">
                            <img src="/images/goods/small/3.jpg" style="filter: hue-rotate(90deg);" />
                        </div>                    
                        <div class="color-preview">
                            <img src="/images/goods/small/3.jpg" style="filter: hue-rotate(180deg);" />
                        </div>
                    </div>
                </div>

                <div class="sizes">
                    <div class="small-label">Размер:</div>
                    <div class="sizes-block">
                        <div class="size">1</div>
                        <div class="size selected">2</div>
                        <div class="size">3</div>
                    </div>      
                </div>

                <div class="count">
                    <div class="small-label">Количество:</div>
                    <div class="counter-block">
                        <div id="decrease-count" class="round-gray-btn"><i class="icon icon-minus"></i></div>
                        <div class="counter">1</div>
                        <div id="increase-count" class="round-gray-btn"><i class="icon icon-plus"></i></div>
                    </div>      
                </div>
            </div>

            <button class="btn buy-input" type="submit"><i class="icon icon-bug"></i>В корзину</button>
        </div>

        <div class="good-flags">
            <div class="flag new"></div>
            <div class="flag eac"></div>
            <div class="flag sale"></div>
        </div>
    </div>
</div>