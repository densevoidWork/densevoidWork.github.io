<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Petzl</title>
        <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
        <script src="{{ '/js/main.js' | url }}" defer></script> 
        <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/css/splide-core.min.css">
    </head>
    <body>
        <header>
            <div class="topbar">
                <div class="container">
                    <div class="first-level">
                        <div class="shops-name">Сеть магазинов АльпИндустрия</div>
                        <div class="second-level">
                            <a href="#">Доставка и оплата</a>
                            <a href="#">Магазин в Москве</a>
                            <a href="/other/contacts/">Контакты</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="middlebar">
                <div class="container">
                    <div class="first-level">

                        <div class="hamburger-btn" data-hide-button-for="mobile-main-menu">
                            <img class="first-line" src="{{ '/images/hamburger-line.svg' | url }}"/>
                            <img class="second-line" src="{{ '/images/hamburger-line.svg' | url }}"/>
                        </div>

                        <a class="logo-container" href="{{ '/' | url }}">
                            <img class="logo-img" src="{{ '/images/mainlogo_full.svg' | url }}" />     
                        </a>

                        <form class="search-field">
                            <img class="magnifier-icon" src="{{ '/images/magnifier-icon.svg' | url }}" />
                            <input type="text" placeholder="Название, артикул, код товара..."/>
                            <button class="btn search-input" type="submit">Поиск</button>
                        </form>

                        <div class="mini-contacts-in-middle-bar">
                            {% include "components/common/mini-contacts.njk" %}
                        </div>

                        <div class="personal-menu">
                            <div id="basket-button" class="icon-btn">
                                <img src="{{ '/images/bug-icon.svg' | url }}" />
                                <div class="btn-counter">1</div>
                                <div class="mini-basket-menu">
                                    <div class="mini-basket-header">Ваша корзина</div>
                                    <div class="mini-basket-message">Товар добавлен в корзину!</div>
                                    <hr />     
                                    <div class="mini-basket-content">                               
                                        {% for i in range(0, 2) %}
                                        <div class="mini-basket-item">                                    
                                            <div class="item-image">
                                                <img src="/images/other/basket/image2.jpg" />
                                            </div>
                                            <div class="item-name">
                                                <div class="name">FLY</div>
                                                <div class="info">
                                                    Размер: L<br />
                                                    Цвет: Blue<br />
                                                    # 364001 - 1 шт.
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        {% endfor %}
                                        <div class="mini-basket-result">
                                            <div class="result-label">Итого:</div>
                                            <div class="result-value">6590 рублей</div>
                                        </div>
                                        <div class="mini-basket-buttons">
                                            <button class="btn transp-gray-btn mini-basket-later-button">ПОЗЖЕ</button>
                                            <a href="/other/basket/" class="btn">ОФОРМИТЬ</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="account-button" class="icon-btn"><img src="{{ '/images/account-icon.svg' | url }}" /></div>
                        </div>
                    </div>
                    <div class="mobile-search-field">
                        <img class="magnifier-icon" src="{{ '/images/magnifier-icon.svg' | url }}" />
                        <input type="text" placeholder="Искать..."/>
                    </div>
                </div>
            </div>
            
            <div class="navbar">
                <div class="container">
                    <div class="first-level">                        
                        <div class="navbar-menu">
                            {% for item in menu %}
                                {% set parent = "" %}

                                {% if item.content|length %}
                                    {% set parent = " parent" %}
                                {% endif %}

                                <div class="navbar-element{{ parent }}">
                                    <a href="{{ item.page }}">{{ item.title }}</a>

                                    <div class="menu-categories">
                                        {% for category in item.content %}
                                            <a class="category" href="{{ category.page }}">
                                                <img class="preview" src="{{ category.image | url }}"></img>
                                                <div class="title">{{ category.title }}</div>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="navbar-submenu">
                    <div class="submenu-goods-categories">
                    </div>
                </div>
            </div>       

            <div class="mobile-navbar">
                <div id="mobile-main-menu" class="mobile-submenu">
                    <div class="main-categories-list">
                        {% set i = 0 %}
                        {% for item in menu %}
                            {% set i = i + 1 %}
                            {% set parent = "" %}

                            {% if item.content|length %}
                            <div class="main-category parent" data-hide-button-for="category_{{ i }}">
                                <div class="main-title">
                                    {{ item.title }}
                                </div>

                                <div id="category_{{ i }}" class="categories-list">
                                    {% for category in item.content %}
                                        {% if category.mobileImage %}                                                    
                                            {% set mobileImage = category.mobileImage %}
                                        {% else %}                             
                                            {% set mobileImage = "/images/goods/categories/category-1.png" %}
                                        {% endif %}

                                        <a class="category" href="{{ category.page }}">
                                            <img class="icon" src="{{ mobileImage | url }}" />
                                            <div class="title">{{ category.title }}</div>
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>

                            {% else %}

                            <a class="main-category" href="{{ item.page }}">
                                <div class="main-title">
                                    {{ item.title }}
                                </div>
                            </a>
                            {% endif %}

                        {% endfor %}
                    </div>                                

                    <div class="mini-contacts-in-mobile-menu">                                    
                        {% include "components/common/mini-contacts.njk" %}
                    </div>
                    
                    <div class="mobile-menu-options">
                        <a href="#">Доставка и оплата</a>
                        <a href="#">Связаться с нами</a>
                    </div>
                </div>
            </div>
        </header>   

        <main>
            {{ content | safe }}
        </main>

        <footer class="footer">
            <div class="subscribe-block">
                <div class="container content">
                    <div class="text-part">
                        <div class="big-text">Подписаться на рассылку</div>
                        <div class="small-text">и всегда быть в курсе</div>
                    </div>
                    <div class="form-part">
                        <form class="subscribe-field">
                            <input type="text" placeholder="Введите ваш email"/>
                            <button class="btn search-input" type="submit">Подписаться</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="footer-content">
                    <div class="brand-part">
                        <a class="logo-container" href="{{ '/' | url }}">
                            <img src="{{ '/images/mainlogo_full.svg' | url }}" />     
                        </a>
                        <div class="follow-block">
                            <div class="invite-text">Присоединяйтесь к нам</div>
                            <div class="social-links">                                
                                {% for social in contacts.social %}
                                <a class="round-btn big" href="{{ social.link }}">
                                    <div class="icon-container">
                                        <img class="color-icon" src="{{ '/images/social/' + social.name + '.svg' | url }}"></img>
                                        <img class="gray-icon" src="{{ '/images/social/' + social.name + '-gray.svg' | url }}"></img>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="rules">Условия использования сайта. При републикации материалов активная ссылка на petzl.ru обязательна.</div>
                    </div>

                    <div class="footer-menu">
                        <a class="menu-element" href="/quality_questions">Задать вопрос</a>
                        <a class="menu-element" href="/other/articles">Новости и статьи</a>
                        <a class="menu-element" href="/other/quality_questions">Вопросы по качеству</a>
                        <a class="menu-element" href="#">Проверка СИЗ</a>
                        <a class="menu-element" href="/other/catalogs">Каталоги</a>
                        <a class="menu-element" href="/other/blanks">Сертификаты</a>
                        <a class="menu-element" href="/other/contacts">Команда Petzl</a>
                        <a class="menu-element" href="#">Фильмотека</a>
                        <a class="menu-element" href="/other/faq">FAQ</a>
                    </div>

                    <div class="contacts">
                        <div class="column">
                            <div class="title">Интернет магазин</div>
                            <a class="menu-element" href="#"><img class="icon" src="{{ '/images/small-email-icon.svg' | url }}"/>info@petzl.ru</a>
                            <a class="menu-element" href="#"><img class="icon" src="{{ '/images/small-phone-icon.svg' | url }}"/>8 (495) 134-74-46</a>
                            <a class="menu-element" href="#">Доставка и оплата</a>
                            <a class="menu-element" href="#">Магазин в Москве</a>
                            <a class="menu-element" href="#">Где еще купить Petzl</a>
                            <a class="menu-element" href="/other/contacts/">Контакты</a>
                            <a class="menu-element" href="#">О бренде</a>
                        </div>
                        <div class="column">
                            <div class="title">Petzl Technical Institute</div>
                            <img class="vlab-logo" src="{{ '/images/logo-vlab.png' | url }}"/>
                            <div class="title big-gap">Оптовым клиентам</div>
                            <a class="menu-element underline" href="dealerpage.ru">dealerpage.ru</a>
                        </div>
                    </div>

                    <div class="mobile-contacts">
                        <a class="menu-element" href="#"><img class="icon" src="{{ '/images/small-email-icon.svg' | url }}"/>info@petzl.ru</a>
                        <a class="menu-element" href="#"><img class="icon" src="{{ '/images/small-phone-icon.svg' | url }}"/>8 (495) 134-74-46</a>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>